{
  "name": "roleMapping",
  "base": "RoleMapping",
  "properties": {
    "principalId": "Number",
    "principalType": {
      "type": "string",
      "default": "USER",
      "description": "The principal type, such as user, application, or role"
    }
  },
  "relations": {
    "role": {
      "type": "belongsTo",
      "model": "role",
      "foreignKey": "roleId"
    }
  },
  "indexes": {
    "role_entity_index": {
      "columns": "principalType, principalId, roleId",
      "unique": true
    }
  }
}
